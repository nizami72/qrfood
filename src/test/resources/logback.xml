<configuration>

    <variable name="logPath" value="${LOG_FILE_PATH}/" />
    <property name="prefix" value="-->" />

    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wht" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />

    <!-- ðŸ”¹ ÐšÐ¾Ð½ÑÐ¾Ð»ÑŒ: Ñ‚Ð¾Ð»ÑŒÐºÐ¾ INFO Ð¸ Ð²Ñ‹ÑˆÐµ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                %d{HH:mm:ss.SSS} %highlight(%-5level) [%cyan(%.20t)] %magenta(%logger{24}:%line) %msg%n
            </pattern>
        </layout>
    </appender>

    <!-- ðŸ”¹ ÐšÐ¾Ð½ÑÐ¾Ð»ÑŒ: Ñ‚Ð¾Ð»ÑŒÐºÐ¾ DEBUG Ð´Ð»Ñ ÑÐ²Ð¾ÐµÐ³Ð¾ Ð¿Ð°ÐºÐµÑ‚Ð° -->
    <appender name="CONSOLE_DEBUG" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} %highlight(%-5level) [%cyan(%.20t)] %magenta(%logger{24}:%line) %msg%n
            </Pattern>
        </layout>
    </appender>


    <!-- ðŸ”¹ Ð¢Ð²Ð¾Ð¹ Ð¿Ð°ÐºÐµÑ‚ â€” DEBUG Ð² Ñ„Ð°Ð¹Ð» Ð¸ ÐºÐ¾Ð½ÑÐ¾Ð»ÑŒ -->
    <logger name="az.qrfood.backend" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE_DEBUG" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- ðŸ”¹ ÐšÐ¾Ñ€Ð½ÐµÐ²Ð¾Ð¹ Ð»Ð¾Ð³Ð³ÐµÑ€ â€” INFO+ -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
